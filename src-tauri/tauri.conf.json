{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "booth-tool",
  "version": "0.1.0",
  "identifier": "com.booth-tool.app",
  "build": {
    "beforeDevCommand": "npm run dev --prefix frontend",
    "beforeBuildCommand": "npm run build --prefix frontend",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "漫展摆摊助手",
        "width": 1024,
        "height": 768
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],

    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}