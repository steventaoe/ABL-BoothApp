{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default", 
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-write",
    "fs:allow-app-write",
     "fs:allow-app-write-recursive", 
     "fs:allow-write-file", "fs:write-all", "fs:write-files",
    "dialog:default",
    "dialog:allow-save",
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    }
  ]
}
